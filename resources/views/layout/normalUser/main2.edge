        up: "fa fa-chevron-circle-up",
        down: "fa fa-chevron-circle-down",
        next: 'fa fa-chevron-circle-right',
        previous: 'fa fa-chevron-circle-left'
      }
    });
    $('#date1').datetimepicker('show');


const StoreAndTime_len = $("#invisible_storetime").children().length;
var StoreAndTime_time = [];
var StoreAndTime_store = [];
for(let x=0;x< StoreAndTime_len;x++){
  StoreAndTime_store[x] = $("#invisible_storetime option").eq(x).val();
  StoreAndTime_time[x] = $("#invisible_storetime option").eq(x).text();
}

$("#store_id").change(function(){

  var store = $("#store_id").val()-1;
  //time = 12 時
  if(StoreAndTime_time[store] == 12){
    	$('#date1').datetimepicker('destroy');
        var disable_date =  [
          moment("2018-05-18"),
          moment("2018-05-20"),
          moment("2018-06-19"),        
        ] 
    $('#date1').datetimepicker({
      format: 'YYYY-MM-DD',
      locale: moment.locale('zh-cn'),
        inline: true,
        sideBySide: true,
        keepOpen: true,
        minDate:  moment("2018-06-11"),
        maxDate:  moment("2018-06-19"),     
        //disabledDates: disable_date

        icons: {
        up: "fa fa-chevron-circle-up",
        down: "fa fa-chevron-circle-down",
        next: 'fa fa-chevron-circle-right',
        previous: 'fa fa-chevron-circle-left'
      }
    });
    $('#date1').datetimepicker('show');
  }
  else if(StoreAndTime_time[store] == 11){
    	$('#date1').datetimepicker('destroy');
        var disable_date =  [
          moment("2018-06-15"),
          moment("2018-06-19"),
        ] 
    $('#date1').datetimepicker({
      format: 'YYYY-MM-DD',
      locale: moment.locale('zh-cn'),
        inline: true,
        sideBySide: true,
        keepOpen: true,
        minDate:  moment("2018-06-10"),
        maxDate:  moment("2018-06-19"),     
        disabledDates: disable_date,
              icons: {
        up: "fa fa-chevron-circle-up",
        down: "fa fa-chevron-circle-down",
        next: 'fa fa-chevron-circle-right',
        previous: 'fa fa-chevron-circle-left'
      }
    });
    $('#date1').datetimepicker('show');
  }

  //選完店櫃後如果非特殊店櫃所渲染的月曆
  else{

    	$('#date1').datetimepicker('destroy');
        var minDate;
        var MinStartDay = moment('2018-05-18');      
        var nowDate = moment();
        if(nowDate < MinStartDay){
          minDate = MinStartDay;
        }else{
          minDate = moment().add(3,'days');
        }
      $('#date1').datetimepicker({
      format: 'YYYY-MM-DD',
        locale: moment.locale('zh-cn'),
        inline: true,
        sideBySide: true,
        keepOpen: true,
        minDate: minDate,
        maxDate: maxDate,
        disabledDates: [
          moment("2018-06-19"),
        ],
        icons: {
          up: "fa fa-chevron-circle-up",
          down: "fa fa-chevron-circle-down",
          next: 'fa fa-chevron-circle-right',
          previous: 'fa fa-chevron-circle-left'
        }
    });
    $('#date1').datetimepicker('show');
  }
})
